# stop all containers
alias dstopall="docker stop $(docker ps -q)"

# remove all containers
alias drmall="docker rm $(docker ps -a -q)"

#remove all images
alias drmiall="docker rmi $(docker images -q)"

#remove all containers of image
drm() { docker rm $(docker ps -a -q -f ancestor=$1); };

#stop and remove all containers of image
dsrm() { docker stop $(docker ps -a -q -f ancestor=$1); docker rm $(docker ps -a -q -f ancestor=$1); };

#list all containers of image
dlc() { docker ps -a -f ancestor=$1; };
